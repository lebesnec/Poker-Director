<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		    android:layout_height="wrap_content"
		    android:minHeight="58dip"
		    android:layout_width="fill_parent"
		    android:orientation="horizontal"
		    android:gravity="center_vertical" 
		    android:focusable="true"
		    android:background="@android:drawable/list_selector_background">
		     
    <TextView android:textAppearance="?android:attr/textAppearanceMedium" 
		    android:maxLines="1" 
		    android:ellipsize="end" 
		    android:layout_height="fill_parent" 
		    android:layout_gravity="center_vertical" 
		    android:id="@+id/playerPlace" android:gravity="right|center_vertical" android:layout_width="30dip" android:text="10" android:paddingRight="5dip"/><QuickContactBadge android:id="@+id/playerBadge" 
			    android:layout_alignParentLeft="true"
		        android:layout_alignParentTop="true"
		        android:layout_marginLeft="2dip"
		        android:src="@drawable/contact_picture" 
		        android:layout_width="54dip" 
		        android:layout_height="54dip" android:layout_marginRight="5dip"></QuickContactBadge>
    
    <TextView android:layout_width="fill_parent" 
		    android:textAppearance="?android:attr/textAppearanceMedium" 
		    android:maxLines="1" 
		    android:ellipsize="end" 
		    android:layout_weight="1" 
		    android:layout_height="fill_parent" 
		    android:id="@+id/playerName" 
		    android:text="name" 
		    android:layout_gravity="center_vertical" 
		    android:gravity="center_vertical"/>
    <TextView android:layout_gravity="center" android:layout_width="65dip" android:text="100$" android:textAppearance="?android:attr/textAppearanceMedium" android:ellipsize="end" android:layout_height="fill_parent" android:gravity="center" android:maxLines="1" android:id="@+id/playerSpend"></TextView>
    
    <View android:id="@+id/divider"
        android:background="#ff313431"
        android:layout_width="1dip"
        android:layout_height="fill_parent"
        android:paddingLeft="8dip"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip" /><TextView android:textAppearance="?android:attr/textAppearanceMedium" android:maxLines="1" android:ellipsize="end" android:layout_height="fill_parent" android:text="100$" android:id="@+id/playerPrize" android:layout_gravity="center" android:gravity="center" android:layout_width="65dip"/>

    

</LinearLayout>
