                </TableRow>
                <TableRow android:gravity="center" android:layout_height="wrap_content" android:id="@+id/TableRow01" android:layout_gravity="center" android:layout_width="wrap_content">
                    <TextView android:id="@+id/TextView03" android:textColor="#ffffff" android:textSize="13dip" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Rebuy : "></TextView>
                    <EditText android:text="1000" android:layout_height="wrap_content" android:layout_width="fill_parent" android:maxLength="6" android:inputType="number" android:width="90dip" android:id="@+id/chipsRebuy"></EditText>
                </TableRow>
                <TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:gravity="center">
                    <TextView android:id="@+id/TextView02" android:layout_width="wrap_content" android:textColor="#ffffff" android:layout_height="wrap_content" android:textSize="13dip" android:text="Addon : "></TextView>
                    <EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="1000" android:maxLength="6" android:inputType="number" android:width="90dip" android:id="@+id/chipsAddon"></EditText>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>
<LinearLayout android:id="@+id/LinearLayout06" android:layout_height="wrap_content" android:background="@drawable/toolbar" android:layout_width="fill_parent" android:minHeight="45dip" android:gravity="center_vertical"><Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/toolbar_button" android:minHeight="35dip" android:textAppearance="?android:attr/textAppearanceSmall" android:textColor="#ffffff" android:text="Done" android:id="@+id/chipsButton" android:layout_marginLeft="5dip" android:textSize="13dip"></Button>

<TextView android:id="@+id/TextView01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:layout_gravity="center" android:gravity="center" android:textColor="#ffffff" android:textStyle="bold" android:textSize="13dip" android:text="Chips"></TextView>
</LinearLayout>






