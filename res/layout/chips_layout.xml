<?xml version="1.0" encoding="utf-8"?>



<LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:id="@+id/chipsMainlayout" android:layout_gravity="center" android:gravity="center" android:focusable="true" android:focusableInTouchMode="true">
